{
  "name": "@replayweb/host",
  "version": "1.0.4",
  "description": "Native Host for ReplayWeb extension",
  "main": "index.js",
  "scripts": {
    "test": "BABEL_ENV=test jest --coverage",
    "lint": "eslint src test",
    "docs": "jsdoc2md --files src/lib/*.js > src/lib/README.md",
    "build": "NODE_ENV=production webpack",
    "build:dev": "NODE_ENV=development webpack",
    "register": "./dist/install.sh"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intuit/replayweb"
  },
  "keywords": [
    "replay",
    "functional",
    "selenium",
    "testing",
    "test"
  ],
  "author": "Harris Borawski",
  "license": "AGPL",
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "jest": "^23.2.0",
    "jest-junit": "^5.1.0",
    "jsdoc-to-markdown": "^4.0.1",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-permissions-plugin": "^1.0.0"
  },
  "dependencies": {
    "chrome-native-messaging": "^0.2.0",
    "dockerode": "^2.5.5",
    "mkdirp": "^0.5.1",
    "simple-git": "^3.16.0"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ]
  },
  "jest-junit": {
    "output": "./target/surefire-reports/junit.xml"
  }
}
